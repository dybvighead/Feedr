<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="INFO" monitorInterval="30">
	<Properties>
		<Property name="LOG_PATTERN">%d{yyyy-MM-dd 'T'HH:mm:ss.SSSZ} %p %m%n
		</Property>
		<Property name="APP_LOG_ROOT">/Users/benjamin/dev/eclipse-workspace/feedr/feedr_v3/src/main/logs
		</Property>
	</Properties>
	<Appenders>
		<Console name="console" target="SYSTEM_OUT" follow="true">
			<PatternLayout pattern="${LOG_PATTERN}" />
		</Console>
		<RollingFile name="ActivityLog"
			fileName="${sys:APP_LOG_ROOT}/ActivityLog.log"
			filePattern="${sys:APP_LOG_ROOT}/ActivityLog-%d{yyyy-MM-dd}-%i.log">
			<PatternLayout pattern="${LOG_PATTERN}" />
			<Policies>
				<SizeBasedTriggeringPolicy size="19500KB" />
			</Policies>
			<DefaultRolloverStrategy max="10" />
		</RollingFile>
		<RollingFile name="DBLog"
			fileName="${sys:APP_LOG_ROOT}/DBLog.log"
			filePattern="${sys:APP_LOG_ROOT}/DBLog-%d{yyyy-MM-dd}-%i.log">
			<PatternLayout pattern="${LOG_PATTERN}" />
			<Policies>
				<SizeBasedTriggeringPolicy size="19500KB" />
			</Policies>
			<DefaultRolloverStrategy max="10" />
		</RollingFile>
	</Appenders>
	<Loggers>
		<Logger name="ActLogging" additivity="false" level="all">
			<AppenderRef ref="ActivityLog" />
			<AppenderRef ref="console" />
		</Logger>
		<Logger name="DBLogging" additivity="false" level="all">
			<AppenderRef ref="DBLog" />
			<AppenderRef ref="console" />
		</Logger>
		<Root level="INFO">
			<AppenderRef ref="console" />
		</Root>
	</Loggers>
</Configuration>